@model Core.Entities.Arquivo

@{
    var traducaoHelper = (Core.Helpers.TraducaoHelper)ViewBag.TraducaoHelper;
    ViewBag.Title = traducaoHelper["CRIAR"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="portlet box grey-gallery">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-plus"></i>@traducaoHelper["EDITAR"]
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
        </div>
    </div>
    <div class="portlet-body form">
        
        @using (Html.BeginForm("SalvarEditar", "Arquivo", FormMethod.Post, new { role = "form", enctype = "multipart/form-data", id = "fileupload", NumeroPaginas = ViewBag.CurrentNumeroPaginas, PageSize = ViewBag.PageSize }))
        {
            @Html.AntiForgeryToken()
            <div class="form-body">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-10"><h4>@traducaoHelper["ARQUIVO"]</h4></div>
                        <div class="col-md-2">@Html.ActionLink("Back to List", "Index", new { id = 0 }, new { @class = "Voltar pull-right", title = traducaoHelper["VOLTAR_PARA_A_LISTA"] })</div>
                    </div>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)

                    <div class="form-group" hidden>
                        <label class="control-label col-md-2" for="atualizacao" hidden>@traducaoHelper["NOME"]</label>
                                                
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="atualizacao">@traducaoHelper["DESCRICAO"]</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" hidden>
                        <label class="control-label col-md-2" for="atualizacao" hidden>@traducaoHelper["SECAO"]</label>
                                                
                        @Html.EditorFor(model => model.SecaoID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SecaoID, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group" hidden>
                        <label class="control-label col-md-2" for="atualizacao" hidden>@traducaoHelper["TIPO"]</label>

                        @Html.EditorFor(model => model.TipoID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TipoID, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="atualizacao">@traducaoHelper["ATIVO"]</label>
                        <div class="col-md-10">
                            <div class="md-radio">
                                <input type="checkbox" class="make-switch" name="Ativo" data-on-text="@traducaoHelper["SIM"]" data-off-text="@traducaoHelper["NAO"]" data-size="small">
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="control-label col-md-2" for="atualizacao">@traducaoHelper["OBSERVACAO"]</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Observacao, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Observacao, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="Ativo">@traducaoHelper["IMAGEM"]</label>
                        <div class="col-md-10">
                            <div class="input-group">
                                <div class="input-group-control">
                                    <input type="text" class="form-control" id="Caminho" disabled placeholder="@traducaoHelper["TIPO_ARQUIVO"]">                                   
                                </div>
                                <span class="input-group-btn btn-left">
                                    <label id="uploadArquivo" class="custom-file-upload btn blue-oleo">
                                        <input type="file" accept=".jpg" id="Arquivo" name="Arquivo" style="display: none;" onchange="$('#Caminho').val(this.value)" />
                                        @traducaoHelper["PROCURAR"]
                                    </label>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="@traducaoHelper["SALVAR"]" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        }

       </div>
</div>
