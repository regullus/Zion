@model Core.Entities.ProdutoItem

@{
    #region Layout

    Layout = "~/Views/Shared/_Layout.cshtml";

    #endregion

    #region ViewBags

    var traducaoHelper = (Core.Helpers.TraducaoHelper)ViewBag.TraducaoHelper;

    ViewBag.Title = ViewBag.Title = traducaoHelper["EXCLUIR"];

    #endregion

    #region Variaveis

    #endregion
}

<div class="portlet box grey-gallery">

    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-eraser"></i>@traducaoHelper["EXCLUIR"]
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
        </div>
    </div>
    <div class="portlet-body form">
        <div class="form-body">
            <div class="row">
                <div class="col-md-10"><h4>@traducaoHelper["COMPOSICAO_PRODUTO"]</h4></div>
                <div class="col-md-2">@Html.ActionLink("Back to List", "Index", new { IdPai = ViewBag.IdPai }, new { @class = "Voltar pull-right", title = traducaoHelper["VOLTAR_PARA_A_LISTA"] })</div>
            </div>

            <h3 class="text-danger">@traducaoHelper["TEM_CERTEZA_QUE_DESEJA_EXLUIR_ESTE_ITEM"]</h3>
            <hr />

            <dl class="dl-horizontal">
                <dt>@traducaoHelper["PRODUTO"]</dt>
                <dd>
                    @Html.DisplayFor(model => model.Produto.Nome)
                </dd>

                <dt>@traducaoHelper["ITEM"]</dt>
                <dd>
                    @Html.DisplayFor(model => model.Produto1.Nome)
                </dd>

                <dt>@traducaoHelper["QUANTIDADE"]</dt>
                <dd>
                    @Html.DisplayFor(model => model.Quantidade)
                </dd>

                <dt>@traducaoHelper["OBSERVACAO"]</dt>
                <dd>
                    @Html.DisplayFor(model => model.Observacao)
                </dd>
                <dd>
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <input type="submit" value="@traducaoHelper["EXCLUIR"]" class="btn btn-danger" id="confirm_button" />
                </div>
            }
        </div>
    </div>
</div>



