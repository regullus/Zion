<table class="table table-condensed table-hover">
    <thead>
        <tr>
            <th class="text-center">Código</th>
            <th class="text-center">Login</th>
            <th class="text-center">Tipo</th>
            <th class="text-center">Categoria</th>
            <th class="text-center">Data</th>
            <th class="text-center">Valor</th>
            <th style="width:30px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var l in Model)
        {
            var label = l.Valor > 0 ? "label-default" : "label-danger";

            <tr>
                <td class="text-center">@l.ID</td>
                <td>@l.Usuario.Login</td>
                <td class="text-center">@l.Tipo</td>
                <td class="text-center">@l.Categoria.Nome</td>
                <td class="text-center">@l.DataLancamento.ToShortDateString()</td>
                <td class="text-center">
                    <span class="label label-sm @label">
                       @moedaPadrao.Simbolo @l.Valor.Value.ToString(moedaPadrao.MascaraOut)                       
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>