@model IEnumerable<Core.Entities.Lancamento>
@{
    ViewBag.Title = "Saques";
    ///ViewBag.Menu = Admin.Controllers.Menu.Movimentos;
    ViewBag.MenuIndex = 1;
    Layout = "~/Views/Shared/_Layout.cshtml";

    #region Variaveis

    var moedaPadrao = Core.Helpers.ConfiguracaoHelper.GetMoedaPadrao();

    #endregion
}

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h3 class="page-title">
            Movimentações
        </h3>
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="@Url.Action("index", "home")">Dashboard</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="javascript:void(0);">Movimentações</a>
            </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>

<div>
    <a href="@Url.Action("Incluir", "Movimentacoes")">Incluir Movimentação</a>
</div>

