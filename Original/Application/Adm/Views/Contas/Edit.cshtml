@model Core.Entities.Conta
@{
    var traducaoHelper = (Core.Helpers.TraducaoHelper)ViewBag.TraducaoHelper;
    ViewBag.Title = traducaoHelper["EDITAR"];
    Layout = "~/Views/Shared/_Layout.cshtml";

    var moedas = ViewBag.MoedaID;
}

<div class="portlet box grey-gallery">

    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-pencil"></i>@traducaoHelper["EDITAR"]
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
        </div>
    </div>

    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-body">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-10"><h4>@traducaoHelper["CONTA"]</h4></div>
                        <div class="col-md-2">@Html.ActionLink("Back to List", "Index", new { id = 0 }, new { @class = "Voltar pull-right", title = traducaoHelper["VOLTAR_PARA_A_LISTA"] })</div>
                    </div>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)

                    @if (User.IsInRole("perfilMaster"))
                    {
                    }
                    <div class="form-group">
                        <label class="control-label col-md-2" for="atualizacao">@traducaoHelper["NOME"]</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="atualizacao">@traducaoHelper["MOEDA"]</label>
                        <div class="col-md-10">
                            <select class="form-control" name="MoedaID">
                                @foreach (var item in moedas)
                                {
                                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                                }
                            </select>

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="atualizacao">@traducaoHelper["ATIVO"]</label>
                        <div class="col-md-10">
                            <div class="md-radio">
                                <input type="checkbox" class="make-switch" name="Ativo" @(Model.Ativo ? "checked" : "") data-on-text="@traducaoHelper["SIM"]" data-off-text="@traducaoHelper["NAO"]" >
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="atualizacao">@traducaoHelper["PERMITE_SAQUE"]</label>
                        <div class="col-md-10">
                            <div class="md-radio">
                                <input type="checkbox" class="make-switch" name="PermiteSaque" @(Model.PermiteSaque ? "checked" : "") data-on-text="@traducaoHelper["SIM"]" data-off-text="@traducaoHelper["NAO"]" >
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="@traducaoHelper["EDITAR"]" class="btn green-haze" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>