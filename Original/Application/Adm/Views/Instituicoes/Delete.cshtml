@model Core.Entities.Instituicao
@{
   var traducaoHelper = (Core.Helpers.TraducaoHelper)ViewBag.TraducaoHelper;
   ViewBag.Title = ViewBag.Title = traducaoHelper["EXCLUIR"];
   Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="portlet box grey-gallery">

   <div class="portlet-title">
      <div class="caption">
         <i class="fa fa-eraser"></i>@traducaoHelper["EXCLUIR"]
      </div>
      <div class="tools">
         <a href="javascript:;" class="collapse"></a>
      </div>
   </div>

   <div class="portlet-body form">
      <div class="form-body">
         <div class="row">
            <div class="col-md-10"><h4>@traducaoHelper["INSTITUICAO"]</h4></div>
            <div class="col-md-2">@Html.ActionLink("Back to List", "Index", new { id = 0 }, new { @class = "Voltar pull-right", title = traducaoHelper["VOLTAR_PARA_A_LISTA"] })</div>
         </div>
         <h3 class="text-danger">@traducaoHelper["TEM_CERTEZA_QUE_DESEJA_EXLUIR_ESTE_ITEM"]</h3>
         <hr />
         <dl class="dl-horizontal">
            <dt>@traducaoHelper["DESCRICAO"]</dt>
            <dd>
               @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt>@traducaoHelper["PAIS"]</dt>
            <dd>
               @Html.DisplayFor(model => model.Pais.Nome)
            </dd>
            <dt>@traducaoHelper["ATIVOS"]</dt>
            <dd>
               @Html.DisplayFor(model => model.Ativo.Descricao)
            </dd>
            <dt>@traducaoHelper["CODIGO_INSTITUICAO"]</dt>
            <dd>
               @Html.DisplayFor(model => model.CodigoInstituicao)
            </dd>
            <dd>
            </dd>
         </dl>

         @using (Html.BeginForm())
         {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
               <input type="submit" value="@traducaoHelper["EXCLUIR"]" class="btn btn-danger" id="confirm_button" />
            </div>
         }
      </div>
   </div>
</div>
